<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_ing"
    android:layout_margin="20dp"
    card_view:cardBackgroundColor="@color/card"
    card_view:cardCornerRadius="28dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="321dp"
        android:layout_height="130dp"
        android:padding="16dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_img"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:scaleType="centerCrop"
            card_view:riv_corner_radius="40dp"
            />

        <TextView
            android:id="@+id/item_nombre"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="19dp"
            android:layout_toRightOf="@id/item_img"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_actor"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_nombre"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@id/item_img"
            android:layout_toRightOf="@id/item_img"
            android:textColor="@color/text"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
